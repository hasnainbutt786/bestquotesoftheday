<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp"
    android:layout_margin="@dimen/_10sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:clickable="true"
    android:id="@+id/cardView"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewCategories"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_90sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewCategories"
            android:fontFamily="@font/poppins"
            android:text="@string/category_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/imageViewCategories"
            app:layout_constraintRight_toRightOf="@+id/imageViewCategories"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCategories" />

        <TextView
            android:id="@+id/totalChannels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryName"
            android:fontFamily="@font/poppins"
            android:text="@string/total_quotes"
            app:layout_constraintLeft_toLeftOf="@+id/categoryName"
            app:layout_constraintRight_toRightOf="@+id/categoryName"
            app:layout_constraintTop_toBottomOf="@+id/categoryName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>